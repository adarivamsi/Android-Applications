<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.wikitude.virtualhome.ProductInfo">

    <TextView
        android:id="@+id/productNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textColor="#000000"
        android:text="@string/product_name"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/productNameEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="8dp"
        android:layout_alignParentRight="true"
        android:textColor="#000000"
        android:text="Sample Product Name"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_toRightOf="@+id/productNameTextView" />

    <TextView
        android:id="@+id/dimensionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/productNameTextView"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="28dp"
        android:text="@string/dimension_string"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/dimensionEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/productNameEditText"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/dimensionTextView"
        android:text="Sample dimension"
        android:ems="10"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/priceTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:text="@string/price_string"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_alignRight="@+id/dimensionTextView"
        android:layout_alignEnd="@+id/dimensionTextView"
        android:layout_alignTop="@+id/priceEditText"
        android:layout_above="@+id/descriptionTextView" />

    <TextView
        android:id="@+id/priceEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dimensionEditText"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/priceTextView"
        android:textColor="#000000"
        android:text="Sample price"
        android:ems="10"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/descriptionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/productNameTextView"
        android:layout_below="@+id/priceEditText"
        android:layout_marginTop="26dp"
        android:text="@string/description_string"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/descriptionEditText"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:ems="10"
        android:gravity="top|center_vertical"
        android:lines="20"
        android:scrollbars="vertical"
        android:singleLine="false"
        android:textColor="#000000"
        android:layout_below="@+id/descriptionTextView"
        android:layout_alignLeft="@+id/descriptionTextView"
        android:layout_alignStart="@+id/descriptionTextView"
        android:layout_alignRight="@+id/priceEditText"
        android:layout_alignEnd="@+id/priceEditText">

        <requestFocus />
    </TextView>

</RelativeLayout><!-- From: file:/Users/swethark/Desktop/VirtualHome/ARHome/app/src/main/res/layout/activity_product_info.xml -->