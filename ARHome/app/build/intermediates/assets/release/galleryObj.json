var current = '';
var imageId= 0;
var virtualObjectInfo = {};
/* DATA STRUCTURE
    "VirtualObjectId": {
      "src": value,
      "scale": value,
      "zValue": value,
      "width":value,
      "height":value,
      "offsetTopValue": value,
      "offsetLeftValue": value
    }
*/

